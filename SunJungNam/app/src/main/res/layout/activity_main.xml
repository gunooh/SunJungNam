<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:weightSum="4"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/foodbutton"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:onClick="onClickFood"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/travelbutton"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="onClickTravel" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/bt3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/moviebutton"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="onClickMovie" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/bt4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/directbutton"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:onClick="onClickInput" />

    </LinearLayout>

</LinearLayout>
