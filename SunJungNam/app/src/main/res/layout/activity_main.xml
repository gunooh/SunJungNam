<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center"
        android:weightSum="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/foodbutton"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:onClick="onClickFood" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/bt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/travelbutton"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:onClick="onClickTravel" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/bt3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/moviebutton"
                android:onClick="onClickMovie" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/bt4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/directbutton"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:onClick="onClickInput" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/list_view"
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:gravity="center">


            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/noticemenu"
                android:onClick="onClickNotice"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/foodmenu"
                android:onClick="onClickFood"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/travelmenu"
                android:onClick="onClickTravel"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/moviemenu"
                android:onClick="onClickMovie"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/inputmenu"
                android:onClick="onClickInput"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/boardmenu"
                android:onClick="onClickBoard"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/settingmenu"
                android:onClick="onClickSetting"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>

